<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:background="@color/white" android:layout_width="match_parent" android:layout_height="match_parent">
    <ImageView android:id="@+id/back_arrow_IV" android:padding="10dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_alignParentRight="true" app:srcCompat="@drawable/ic_close"/>
    <TextView android:textSize="15sp" android:textColor="@color/normal_text_color" android:gravity="center" android:id="@+id/tv_question" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_margin="12dp" android:text="" android:layout_below="@+id/back_arrow_IV" android:fontFamily="@font/sf_ui_display_regular"/>
    <android.support.v4.widget.NestedScrollView android:background="@color/white" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_below="@+id/tv_question">
        <TextView android:textColor="@color/normal_text_color" android:gravity="center" android:id="@+id/tv_answer" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_margin="12dp" android:text="" android:layout_below="@+id/tv_question" android:lineSpacingExtra="3dp" android:fontFamily="@font/sf_ui_display_regular"/>
    </android.support.v4.widget.NestedScrollView>
</RelativeLayout>
