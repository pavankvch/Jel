<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:layout_width="match_parent" android:layout_height="match_parent">
    <LinearLayout android:gravity="center" android:orientation="horizontal" android:id="@+id/aminityHeaderLay" android:layout_width="match_parent" android:layout_height="?android:attr/actionBarSize">
        <ImageView android:id="@+id/back_arrow_property" android:padding="12dp" android:layout_width="wrap_content" android:layout_height="wrap_content" app:srcCompat="@drawable/ic_arrow_back_black_24dp"/>
        <android.support.v4.widget.Space android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1"/>
        <TextView android:textSize="16sp" android:textColor="@color/normal_text_color" android:id="@+id/saveAndExit" android:padding="12dp" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="8dp" android:text="@string/amenities_save_and_exit"/>
    </LinearLayout>
    <TextView android:textSize="30sp" android:textColor="@color/property_heading_color" android:id="@+id/headingName" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="16dp" android:text="@string/amenities" android:layout_below="@+id/aminityHeaderLay" android:fontFamily="@font/sf_ui_display_regular"/>
    <TextView android:textSize="15sp" android:textColor="@color/property_heading_color" android:id="@+id/amenities_desc" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="16dp" android:text="@string/amenities_desc" android:layout_below="@+id/headingName" android:lineSpacingExtra="3dp" android:fontFamily="@font/sf_ui_display_regular"/>
    <android.support.v7.widget.RecyclerView android:id="@+id/amenity_recyclerView" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="16dp" android:layout_marginTop="10dp" android:layout_marginRight="16dp" android:layout_above="@+id/products_list_next" android:layout_below="@+id/amenities_desc"/>
    <Button android:textSize="22sp" android:textColor="@color/white" android:id="@+id/products_list_next" android:background="@drawable/button_backgound" android:padding="10dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_margin="20dp" android:text="@string/amenities_next" android:layout_alignParentBottom="true" android:fontFamily="@font/sf_ui_display_bold" style="?android:attr/borderlessButtonStyle"/>
</RelativeLayout>
