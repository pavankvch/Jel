<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:gravity="center" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content">
    <TextView android:textSize="18sp" android:textColor="@color/normal_text_color" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/update_price_label"/>
    <TextView android:textSize="14sp" android:textColor="@color/light_text_color" android:id="@+id/selected_date_TV" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="12dp"/>
