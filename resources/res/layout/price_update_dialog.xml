        <com.jelsat.widgets.FancyButton android:id="@+id/update_button" android:paddingLeft="32dp" android:paddingTop="12dp" android:paddingRight="32dp" android:paddingBottom="10dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="24dp" android:textAllCaps="true" app:fb_defaultColor="@color/app_background" app:fb_focusColor="#ff838b" app:fb_radius="6dp" app:fb_text="@string/update" app:fb_textColor="@color/white" app:fb_textFont="sf_ui_display_medium.otf" app:fb_textSize="16sp"/>
    </LinearLayout>
</LinearLayout>
