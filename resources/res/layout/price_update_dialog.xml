    </android.support.design.widget.TextInputLayout>
    <LinearLayout android:gravity="end" android:orientation="horizontal" android:background="@color/white" android:paddingLeft="24dp" android:paddingTop="12dp" android:paddingRight="24dp" android:paddingBottom="12dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="20dp">
