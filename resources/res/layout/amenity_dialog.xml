<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content">
    <LinearLayout android:orientation="vertical" android:id="@+id/amenities_layout" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_above="@+id/close_layout" android:layout_alignParentTop="true">
        <TextView android:textColor="@color/white" android:gravity="center" android:background="@color/app_background" android:paddingTop="12dp" android:paddingBottom="12dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="@string/amenities" android:textAllCaps="true"/>
        <android.support.v7.widget.RecyclerView android:id="@+id/amenities_recyclerView" android:layout_width="match_parent" android:layout_height="wrap_content"/>
    </LinearLayout>
    <RelativeLayout android:orientation="vertical" android:id="@+id/close_layout" android:background="@color/white" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_alignParentBottom="true">
        <View android:background="@color/booking_status_bg" android:layout_width="match_parent" android:layout_height="1dp"/>
        <TextView android:textColor="@color/normal_text_color" android:gravity="center" android:id="@+id/close_TV" android:paddingTop="12dp" android:paddingBottom="12dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="@string/close"/>
    </RelativeLayout>
</RelativeLayout>
