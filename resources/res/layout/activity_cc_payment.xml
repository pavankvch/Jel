                </android.support.design.widget.TextInputLayout>
                <RelativeLayout android:id="@+id/rememberMeRL" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/pf_10dp_space" android:layout_marginRight="@dimen/pf_10dp_space">
                    <TextView android:textColor="@android:color/darker_gray" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/pf_remember_me" android:layout_centerVertical="true"/>
                    <ToggleButton android:id="@+id/rememberMeTB" android:background="@drawable/remember_me_toggle" android:layout_width="@dimen/pf_remember_me_tb_width" android:layout_height="@dimen/pf_remember_me_tb_height" android:layout_marginTop="@dimen/pf_10dp_space" android:checked="true" android:textOn="" android:textOff="" android:layout_alignParentRight="true"/>
