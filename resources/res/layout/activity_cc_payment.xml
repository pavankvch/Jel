        <com.shamanland.fonticon.FontIconView android:textSize="@dimen/pf_back_icon_txt_size" android:textColor="@android:color/white" android:id="@+id/backButton" android:clickable="true" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_margin="@dimen/pf_border_space" android:text="@string/icon_left_circled" android:layout_centerVertical="true" android:onClick="onBackPressed" app:pressedGlowColor="@color/pf_green" app:pressedGlowRadius="@dimen/pf_icon_glow_radius"/>
