                        <EditText android:textSize="@dimen/pf_13_txt_size" android:id="@+id/expiryDateET" android:layout_width="match_parent" android:layout_height="wrap_content" android:hint="@string/pf_expiry_date_hint" android:maxLines="1" android:maxLength="5" android:inputType="date" android:imeOptions="actionNext" style="@style/Fort.EditText.Style"/>
                    </android.support.design.widget.TextInputLayout>
                    <android.support.design.widget.TextInputLayout android:theme="@style/Fort.TextInputLayout.ET" android:id="@+id/cvvIL" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/pf_5dp_space" android:layout_weight="1" app:errorEnabled="true" app:errorTextAppearance="@style/error_appearanceTL" app:hintTextAppearance="@style/Fort.TextInputLayout.TextAppearance">
                        <EditText android:textSize="@dimen/pf_13_txt_size" android:id="@+id/cvvET" android:layout_width="match_parent" android:layout_height="wrap_content" android:hint="@string/pf_cvv_hint" android:maxLines="1" android:maxLength="3" android:inputType="number" android:imeOptions="actionNext" style="@style/Fort.EditText.Style"/>
