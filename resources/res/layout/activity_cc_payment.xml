                    <com.shamanland.fonticon.FontIconView android:textSize="@dimen/pf_card_type_icon_txt_size" android:textColor="@color/pf_green" android:id="@+id/cartTypeIV" android:visibility="invisible" android:layout_width="@dimen/pf_card_type_width" android:layout_height="@dimen/pf_card_type_height" android:layout_marginTop="@dimen/pf_elements_top_space" android:layout_marginRight="@dimen/pf_card_type_margin_to_align" android:text="@string/icon_cc_visa" android:layout_alignParentRight="true"/>
