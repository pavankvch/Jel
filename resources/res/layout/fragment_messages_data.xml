<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginBottom="2dp">
    <de.hdodenhof.circleimageview.CircleImageView android:layout_gravity="center" android:id="@+id/img_profile" android:layout_width="50dp" android:layout_height="50dp" android:layout_marginLeft="12dp" android:src="@drawable/default_logo"/>
