        <TextView android:textSize="12sp" android:textColor="@color/normal_text_color" android:gravity="end" android:layout_gravity="end" android:id="@+id/tv_msg_time" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="20dp" android:layout_marginRight="12dp" android:layout_marginBottom="10dp" android:fontFamily="@font/sf_ui_display_regular"/>
    </LinearLayout>
</LinearLayout>
