<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:layout_width="match_parent" android:layout_height="match_parent">
    <ImageView android:id="@+id/back_arrow_IV" android:paddingLeft="10dp" android:paddingRight="10dp" android:layout_width="wrap_content" android:layout_height="?android:attr/actionBarSize" android:layout_alignParentLeft="true" app:srcCompat="@drawable/ic_arrow_back_black_24dp"/>
    <View android:id="@+id/line" android:background="@color/custom_line_invite_screen" android:layout_width="match_parent" android:layout_height="0.5dp" android:layout_above="@+id/ll_share"/>
    <LinearLayout android:gravity="center" android:orientation="horizontal" android:id="@+id/ll_share" android:padding="5dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_margin="10dp" android:layout_alignParentBottom="true">
        <ImageView android:id="@+id/iv_share_whatsapp" android:paddingLeft="10dp" android:paddingRight="10dp" android:layout_width="wrap_content" android:layout_height="wrap_content" app:srcCompat="@drawable/ic_whatsapp"/>
        <ImageView android:id="@+id/iv_share_fb" android:paddingLeft="10dp" android:paddingRight="10dp" android:layout_width="wrap_content" android:layout_height="wrap_content" app:srcCompat="@drawable/ic_facebook_share"/>
        <ImageView android:id="@+id/iv_share_gmail" android:paddingLeft="10dp" android:paddingRight="10dp" android:layout_width="wrap_content" android:layout_height="wrap_content" app:srcCompat="@drawable/ic_google_plus"/>
        <ImageView android:id="@+id/iv_share" android:paddingLeft="10dp" android:paddingRight="10dp" android:layout_width="wrap_content" android:layout_height="wrap_content" app:srcCompat="@drawable/ic_group_share"/>
    </LinearLayout>
    <TextView android:textSize="14sp" android:textColor="@color/bookings_waiting" android:gravity="center" android:id="@+id/tv_share" android:padding="5dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="@string/invite_sharenow" android:layout_above="@+id/line" android:fontFamily="@font/sf_ui_display_regular"/>
    <android.support.v4.widget.NestedScrollView android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginBottom="12dp" android:layout_above="@+id/tv_share" android:layout_below="@+id/back_arrow_IV">
        <LinearLayout android:orientation="vertical" android:background="@color/white" android:layout_width="match_parent" android:layout_height="match_parent">
            <ImageView android:layout_gravity="center" android:layout_width="200dp" android:layout_height="200dp" android:layout_marginBottom="10dp" app:srcCompat="@drawable/ic_invite_share"/>
            <TextView android:textSize="24sp" android:textStyle="bold" android:textColor="@color/on_map_button" android:layout_gravity="center" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="10dp" android:layout_marginBottom="2dp" android:text="@string/invite_invite_heading_label" android:fontFamily="@font/sf_ui_display_semibold"/>
            <LinearLayout android:orientation="vertical" android:id="@+id/referal_balance_content_layout" android:visibility="visible" android:layout_width="match_parent" android:layout_height="wrap_content">
                <TextView android:textSize="14sp" android:textColor="@color/normal_text_color" android:gravity="center" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_margin="10dp" android:text="@string/invite_description_label1" android:fontFamily="@font/sf_ui_display_semibold"/>
                <TextView android:textSize="13sp" android:textColor="@color/normal_text_color" android:gravity="center" android:id="@+id/get_refferal_amount" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="10dp" android:layout_marginRight="10dp" android:layout_marginBottom="10dp" android:lineSpacingExtra="5dp" android:fontFamily="@font/sf_ui_display_regular"/>
                <TextView android:textColor="@color/invite_link_color" android:gravity="center" android:id="@+id/link_how_it_works" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="10dp" android:layout_marginTop="6dp" android:layout_marginRight="10dp" android:layout_marginBottom="6dp" android:text="@string/invite_how_it_works" android:fontFamily="@font/sf_ui_display_regular"/>
            </LinearLayout>
            <TextView android:textSize="13sp" android:textColor="@color/normal_text_color" android:gravity="center" android:id="@+id/without_refferal_amount_desc" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="@string/earn_free_travel_credits" android:lineSpacingExtra="5dp" android:fontFamily="@font/sf_ui_display_regular"/>
            <TextView android:textSize="13sp" android:textColor="@color/normal_text_color" android:gravity="center" android:visibility="invisible" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="10dp" android:layout_marginRight="10dp" android:layout_marginBottom="7dp" android:text="@string/invite_copycode_label" android:fontFamily="@font/sf_ui_display_regular"/>
            <com.jelsat.widgets.FancyButton android:textSize="20sp" android:gravity="center" android:layout_gravity="center_horizontal" android:id="@+id/tv_code" android:paddingLeft="20dp" android:paddingTop="8dp" android:paddingRight="20dp" android:paddingBottom="8dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginBottom="40dp" app:fb_defaultColor="@color/listing_card_background" app:fb_focusColor="#ff838b" app:fb_radius="30dp" app:fb_textColor="@color/normal_text_color" app:fb_textFont="sf_ui_display_medium.otf"/>
        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>
</RelativeLayout>
