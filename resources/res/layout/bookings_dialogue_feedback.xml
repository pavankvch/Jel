<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:background="@color/white" android:layout_width="match_parent" android:layout_height="match_parent">
    <ImageView android:id="@+id/img_close" android:padding="10dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_alignParentRight="true" app:srcCompat="@drawable/ic_close"/>
    <android.support.v4.widget.NestedScrollView android:background="@color/transparent" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_below="@+id/img_close">
        <RelativeLayout android:background="@color/transparent" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_above="@+id/btn_update">
            <ImageView android:id="@+id/img_star" android:layout_width="100dp" android:layout_height="100dp" android:layout_marginTop="10dp" android:layout_centerHorizontal="true" app:srcCompat="@drawable/ic_starexpression"/>
            <TextView android:textSize="20sp" android:textColor="@color/normal_text_color" android:gravity="center" android:id="@+id/tv_heading" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="12dp" android:layout_marginTop="15dp" android:layout_marginRight="12dp" android:text="@string/feedback_heading" android:layout_below="@+id/img_star" android:fontFamily="@font/sf_ui_display_medium"/>
            <RatingBar android:id="@+id/ratingBar" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_margin="15dp" android:stepSize="0.5" android:layout_below="@+id/tv_heading" android:layout_centerHorizontal="true"/>
            <TextView android:textColor="@color/normal_text_color" android:gravity="start" android:id="@+id/tv_text_title" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="20dp" android:text="@string/feedback_edit_heading" android:layout_below="@+id/ratingBar" android:fontFamily="@font/sf_ui_display_regular"/>
            <EditText android:textSize="15sp" android:textColor="@color/normal_text_color" android:gravity="top" android:id="@+id/et_message" android:background="@null" android:padding="10dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="10dp" android:layout_marginTop="10dp" android:layout_marginRight="10dp" android:layout_marginBottom="40dp" android:hint="@string/write_feedback_hint" android:minLines="5" android:layout_below="@+id/tv_text_title" android:lineSpacingExtra="3dp" android:lineSpacingMultiplier="1.5" android:inputType="textMultiLine" android:imeOptions="actionDone"/>
            <TextView android:textSize="12sp" android:textColor="@color/filter_text_color" android:gravity="center" android:id="@+id/tv_feedback_time" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="@string/feedback_text_time" android:layout_below="@+id/et_message" android:fontFamily="@font/sf_ui_display_regular"/>
            <Button android:textSize="20sp" android:textColor="@color/white" android:gravity="center" android:id="@+id/btn_submit" android:background="@drawable/button_selected_background" android:layout_width="match_parent" android:layout_height="40dp" android:layout_margin="15dp" android:text="@string/submit" android:layout_below="@+id/tv_feedback_time" android:textAllCaps="true" android:fontFamily="@font/sf_ui_display_medium" style="?android:attr/borderlessButtonStyle"/>
        </RelativeLayout>
    </android.support.v4.widget.NestedScrollView>
</RelativeLayout>
