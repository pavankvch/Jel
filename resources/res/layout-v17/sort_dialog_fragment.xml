<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:orientation="vertical" android:background="@drawable/corners" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_margin="12dp">
    <LinearLayout android:orientation="horizontal" android:background="@color/app_background" android:paddingLeft="12dp" android:paddingTop="8dp" android:paddingRight="0dp" android:paddingBottom="8dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:paddingStart="12dp" android:paddingEnd="0dp">
        <TextView android:textSize="16sp" android:textColor="@color/white" android:layout_width="0dp" android:layout_height="wrap_content" android:text="@string/sort_by" android:layout_weight="1" android:fontFamily="@font/sf_ui_display_regular"/>
        <TextView android:textSize="16sp" android:textColor="@color/white" android:id="@+id/done_TV" android:padding="4dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="12dp" android:text="@string/done" android:fontFamily="@font/sf_ui_display_regular" android:layout_marginEnd="12dp"/>
    </LinearLayout>
    <RadioGroup android:orientation="vertical" android:id="@+id/sort_radio_group" android:background="@color/white" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_margin="12dp">
        <android.support.v7.widget.AppCompatRadioButton android:textSize="16sp" android:textColor="@color/normal_text_color" android:id="@+id/high_low_price_radioButton" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="15dp" android:button="@null" android:text="@string/highToLowPrice" android:drawablePadding="12dp" android:fontFamily="@font/sf_ui_display_regular"/>
        <android.support.v7.widget.AppCompatRadioButton android:textSize="16sp" android:textColor="@color/normal_text_color" android:id="@+id/low_high_price_radioButton" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="30dp" android:layout_marginBottom="15dp" android:button="@null" android:text="@string/lowToHighPrice" android:drawablePadding="12dp"/>
        <android.support.v7.widget.AppCompatRadioButton android:textSize="16sp" android:textColor="@color/normal_text_color" android:id="@+id/sort_rating" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:button="@null" android:text="@string/sort_dialog_rating" android:drawablePadding="12dp" android:fontFamily="@font/sf_ui_display_regular"/>
    </RadioGroup>
</LinearLayout>
