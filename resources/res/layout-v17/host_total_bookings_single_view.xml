<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:orientation="vertical" android:background="@color/white" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="12dp" android:layout_marginBottom="6dp">
    <RelativeLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="10dp" android:layout_marginRight="10dp">
        <TextView android:textSize="12sp" android:textColor="@color/invite_link_color" android:ellipsize="end" android:id="@+id/tv_guest_name" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_alignParentLeft="true" android:fontFamily="@font/sf_ui_display_regular" android:layout_alignParentStart="true"/>
        <TextView android:textSize="12sp" android:textColor="@color/light_text_color" android:id="@+id/tv_booked_date" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginBottom="2dp" android:layout_toLeftOf="@+id/tv_booked_date" android:layout_alignParentRight="true" android:fontFamily="@font/sf_ui_display_regular" android:layout_alignParentEnd="true"/>
    </RelativeLayout>
    <android.support.v7.widget.CardView android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_margin="5dp" app:cardBackgroundColor="@color/white" app:cardCornerRadius="2dp" app:cardElevation="2dp">
        <LinearLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_margin="10dp">
            <FrameLayout android:layout_gravity="center" android:id="@+id/property_frameLayout" android:background="@drawable/corners" android:layout_width="80dp" android:layout_height="80dp">
                <ImageView android:id="@+id/img_property" android:layout_width="match_parent" android:layout_height="match_parent" android:scaleType="fitXY" app:srcCompat="@drawable/default_logo"/>
            </FrameLayout>
            <LinearLayout android:layout_gravity="center_vertical" android:orientation="vertical" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_marginLeft="10dp" android:layout_marginRight="10dp" android:layout_weight="1">
                <TextView android:textSize="12sp" android:textColor="@color/bookings_propertyname_color" android:ellipsize="end" android:id="@+id/tv_property_name" android:layout_width="match_parent" android:layout_height="wrap_content" android:fontFamily="@font/sf_ui_display_medium"/>
                <LinearLayout android:layout_gravity="center" android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="8dp" android:layout_marginBottom="8dp">
                    <TextView android:textSize="13sp" android:textColor="@color/normal_text_color" android:id="@+id/property_check_in_date" android:layout_width="wrap_content" android:layout_height="wrap_content" android:fontFamily="@font/sf_ui_display_medium"/>
                    <com.jelsat.widgets.FancyButton android:textSize="9sp" android:id="@+id/tv_nights_numbers" android:padding="2dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="16dp" android:layout_marginRight="16dp" android:layout_marginStart="16dp" android:layout_marginEnd="16dp" app:fb_borderColor="@color/normal_text_color" app:fb_borderWidth="1dp" app:fb_defaultColor="@color/white" app:fb_radius="2dp" app:fb_text="2N" app:fb_textAllCaps="true" app:fb_textColor="@color/normal_text_color" app:fb_textFont="sf_ui_display_medium.otf" app:fb_textSize="9sp"/>
                    <TextView android:textSize="13sp" android:textColor="@color/normal_text_color" android:id="@+id/property_check_out_date" android:layout_width="wrap_content" android:layout_height="wrap_content" android:fontFamily="@font/sf_ui_display_medium"/>
                </LinearLayout>
                <RelativeLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content">
                    <com.jelsat.customclasses.CustomTextView android:textSize="12sp" android:textColor="@color/on_map_button" android:gravity="center_vertical" android:id="@+id/tv_guests_count" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_alignParentLeft="true" android:layout_alignParentTop="true" android:layout_centerVertical="true" android:fontFamily="@font/sf_ui_display_regular" android:layout_alignParentStart="true" app:drawableLeftCompat="@drawable/ic_guests_small"/>
                    <com.jelsat.customclasses.CustomTextView android:textSize="12sp" android:textColor="@color/light_text_color" android:gravity="center_vertical" android:id="@+id/tv_property_booking_type" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_alignParentTop="true" android:layout_alignParentRight="true" android:layout_centerVertical="true" android:fontFamily="@font/sf_ui_display_regular" android:layout_alignParentEnd="true" app:drawableLeftCompat="@drawable/ic_instant_booking" app:fontFamily="@font/sf_ui_display_regular"/>
                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>
