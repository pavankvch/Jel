    <android.support.design.widget.TextInputLayout android:id="@+id/referral_text_input_layout" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="6dp" android:layout_marginTop="26dp" android:layout_marginStart="6dp">
        <com.jelsat.customclasses.CustomEditText android:textSize="16sp" android:textColor="@color/app_background" android:textColorHint="@color/app_background" android:gravity="start" android:id="@+id/referral_code" android:background="@null" android:layout_width="match_parent" android:layout_height="wrap_content" android:hint="@string/home_referral_code_label" android:drawablePadding="12dp" android:inputType="text" android:fontFamily="@font/sf_ui_display_regular" android:textAlignment="viewStart" app:drawableLeftCompat="@drawable/ic_referal_code"/>
