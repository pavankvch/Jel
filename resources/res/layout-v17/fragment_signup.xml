    <TextView android:textSize="14sp" android:textColor="@color/light_text_color" android:gravity="center" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="12dp" android:layout_marginBottom="4dp" android:text="@string/home_signup_agree_label" android:fontFamily="@font/sf_ui_display_regular"/>
    <LinearLayout android:gravity="center" android:layout_gravity="center" android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="12dp" android:layout_marginRight="12dp">
        <TextView android:textSize="14sp" android:textColor="@color/normal_text_color" android:id="@+id/terms_text" android:background="?android:attr/selectableItemBackground" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/home_terms_label" android:fontFamily="@font/sf_ui_display_medium"/>
        <TextView android:textSize="14sp" android:textColor="@color/normal_text_color" android:id="@+id/privacy_view" android:background="?android:attr/selectableItemBackground" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="5dp" android:text="@string/private_policies" android:fontFamily="@font/sf_ui_display_medium" android:layout_marginStart="5dp"/>
    </LinearLayout>
