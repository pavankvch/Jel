    <View android:id="@+id/mobile_line" android:background="@color/normal_text_color_30pr_opacity" android:layout_width="match_parent" android:layout_height="0.8dp" android:layout_marginTop="2dp"/>
    <TextView android:textSize="12sp" android:textColor="@color/edit_text_error_text_color" android:gravity="start" android:id="@+id/mobile_number_error" android:visibility="invisible" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="6dp" android:layout_marginTop="2dp" android:fontFamily="@font/sf_ui_display_regular" android:textAlignment="viewStart" android:layout_marginStart="6dp"/>
