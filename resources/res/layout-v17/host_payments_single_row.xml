<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:background="@color/white" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_margin="5dp" app:cardCornerRadius="2dp" app:cardElevation="1dp">
    <RelativeLayout android:layout_width="match_parent" android:layout_height="wrap_content">
        <LinearLayout android:orientation="horizontal" android:id="@+id/mainrelative" android:layout_width="match_parent" android:layout_height="wrap_content">
            <ImageView android:id="@+id/img_property" android:layout_width="60dp" android:layout_height="60dp" android:layout_margin="10dp" android:scaleType="fitXY" app:srcCompat="@drawable/default_logo_small"/>
            <LinearLayout android:layout_gravity="center" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content">
                <TextView android:textColor="@color/host_payments_propertyname" android:gravity="start" android:id="@+id/tv_property_name" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="5dp" android:layout_marginTop="5dp" android:layout_marginRight="5dp" android:fontFamily="@font/sf_ui_display_regular" android:textAlignment="viewStart"/>
                <TextView android:textColor="@color/property_text_color" android:gravity="start" android:id="@+id/tv_property_address" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="5dp" android:layout_marginTop="5dp" android:layout_marginRight="5dp" android:layout_below="@+id/tv_property_name" android:fontFamily="@font/sf_ui_display_regular" android:textAlignment="viewStart"/>
                <TextView android:textColor="@color/cost_calendar_price_color" android:gravity="start" android:id="@+id/tv_property_payment_status" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_margin="5dp" android:layout_below="@+id/tv_property_address" android:fontFamily="@font/sf_ui_display_regular" android:textAlignment="viewStart"/>
            </LinearLayout>
        </LinearLayout>
        <View android:id="@+id/view_horizontal" android:background="@color/choose_location_line_color" android:layout_width="match_parent" android:layout_height="0.5dp" android:layout_below="@+id/mainrelative"/>
        <RelativeLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_below="@+id/view_horizontal">
            <View android:id="@+id/view_vertical" android:background="@color/choose_location_line_color" android:layout_width="0.5dp" android:layout_height="30dp" android:layout_centerInParent="true"/>
            <LinearLayout android:gravity="center" android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_toLeftOf="@+id/view_vertical" android:layout_centerVertical="true">
                <TextView android:textColor="@color/normal_text_color" android:layout_gravity="center_horizontal" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="10dp" android:layout_marginRight="10dp" android:text="@string/host_payments_total_bookings" android:fontFamily="@font/sf_ui_display_regular"/>
                <TextView android:textColor="@color/normal_text_color" android:id="@+id/tv_bookings_count" android:layout_width="wrap_content" android:layout_height="wrap_content" android:fontFamily="@font/sf_ui_display_semibold"/>
            </LinearLayout>
            <LinearLayout android:gravity="center" android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_toRightOf="@+id/view_vertical" android:layout_centerVertical="true">
                <TextView android:textColor="@color/normal_text_color" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="10dp" android:layout_marginRight="10dp" android:text="@string/host_payments_earnings" android:fontFamily="@font/sf_ui_display_regular"/>
                <TextView android:textColor="@color/normal_text_color" android:id="@+id/tv_total_earnings" android:layout_width="wrap_content" android:layout_height="wrap_content" android:fontFamily="@font/sf_ui_display_semibold"/>
            </LinearLayout>
        </RelativeLayout>
    </RelativeLayout>
</android.support.v7.widget.CardView>
