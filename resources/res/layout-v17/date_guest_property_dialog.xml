<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:orientation="vertical" android:fitsSystemWindows="true" android:layout_width="match_parent" android:layout_height="match_parent">
    <LinearLayout android:orientation="vertical" android:background="@color/white" android:layout_width="match_parent" android:layout_height="wrap_content">
        <LinearLayout android:layout_gravity="center" android:orientation="horizontal" android:background="@color/white" android:layout_width="match_parent" android:layout_height="wrap_content">
            <ImageView android:layout_gravity="center" android:id="@+id/back_arrow_IV" android:padding="12dp" android:layout_width="wrap_content" android:layout_height="wrap_content" app:srcCompat="@drawable/ic_arrow_back_black_24dp"/>
            <TextView android:ellipsize="end" android:layout_gravity="center_vertical" android:id="@+id/location_text" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/you_are_in_label" android:maxLines="1" android:lines="1" android:singleLine="true" android:fontFamily="@font/sf_ui_display_medium"/>
        </LinearLayout>
        <View android:background="@color/editext_line_color" android:layout_width="match_parent" android:layout_height="0.2dp"/>
        <android.support.design.widget.TabLayout android:id="@+id/tabLayout" android:layout_width="match_parent" android:layout_height="50dp" app:tabGravity="0" app:tabIndicatorColor="@color/resend_color" app:tabMode="1" app:tabPaddingEnd="6dp" app:tabPaddingStart="6dp"/>
    </LinearLayout>
    <LinearLayout android:orientation="vertical" android:background="@color/white" android:paddingTop="10dp" android:layout_width="match_parent" android:layout_height="wrap_content">
        <android.support.v4.view.ViewPager android:id="@+id/viewPager" android:layout_width="match_parent" android:layout_height="0dp" android:layout_weight="1"/>
        <LinearLayout android:gravity="end" android:orientation="horizontal" android:id="@+id/save_button_layout" android:background="@color/white" android:paddingLeft="24dp" android:paddingTop="12dp" android:paddingRight="24dp" android:paddingBottom="12dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layoutDirection="ltr">
            <com.jelsat.widgets.FancyButton android:id="@+id/cancel_button" android:padding="10dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:textAllCaps="true" app:fb_borderColor="#ffffff" app:fb_borderWidth="1dp" app:fb_defaultColor="@color/white" app:fb_focusColor="#ff838b" app:fb_text="@string/cancel_label" app:fb_textColor="@color/normal_text_color" app:fb_textFont="sf_ui_display_medium.otf" app:fb_textSize="16sp"/>
            <com.jelsat.widgets.FancyButton android:id="@+id/save_button" android:paddingLeft="32dp" android:paddingTop="12dp" android:paddingRight="32dp" android:paddingBottom="10dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="24dp" android:textAllCaps="true" android:layout_marginStart="24dp" app:fb_borderColor="#ffffff" app:fb_borderWidth="1dp" app:fb_defaultColor="@color/dialog_save" app:fb_focusColor="#ff838b" app:fb_radius="3dp" app:fb_text="@string/save_label" app:fb_textColor="@color/white" app:fb_textFont="sf_ui_display_medium.otf" app:fb_textSize="16sp"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
