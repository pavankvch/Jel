<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:layout_width="match_parent" android:layout_height="match_parent">
    <LinearLayout android:gravity="center" android:orientation="horizontal" android:id="@+id/houseRuleLay" android:layout_width="match_parent" android:layout_height="?android:attr/actionBarSize">
        <ImageView android:id="@+id/back_arrow_property" android:padding="12dp" android:layout_width="wrap_content" android:layout_height="wrap_content" app:srcCompat="@drawable/ic_arrow_back_black_24dp"/>
        <android.support.v4.widget.Space android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1"/>
        <TextView android:textSize="16sp" android:textColor="@color/normal_text_color" android:id="@+id/saveAndExit" android:padding="12dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="8dp" android:text="@string/houserules_save_and_exit" android:layout_marginEnd="8dp"/>
    </LinearLayout>
    <TextView android:textSize="30sp" android:textColor="@color/property_heading_color" android:id="@+id/HouseRule" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="16dp" android:layout_marginRight="16dp" android:text="@string/house_rules" android:layout_below="@+id/houseRuleLay" android:fontFamily="@font/sf_ui_display_regular" android:layout_marginStart="16dp" android:layout_marginEnd="16dp"/>
    <TextView android:textSize="15sp" android:textColor="@color/property_heading_color" android:id="@+id/HouseRuledesc" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="16dp" android:layout_marginRight="16dp" android:text="@string/house_rules_description" android:layout_below="@+id/HouseRule" android:lineSpacingExtra="3dp" android:fontFamily="@font/sf_ui_display_regular" android:layout_marginStart="16dp" android:layout_marginEnd="16dp"/>
    <android.support.v4.widget.NestedScrollView android:layout_width="match_parent" android:layout_height="match_parent" android:layout_marginBottom="10dp" android:layout_above="@+id/nextButtonLay" android:layout_below="@+id/HouseRuledesc">
        <RelativeLayout android:layout_width="match_parent" android:layout_height="wrap_content">
            <android.support.v7.widget.RecyclerView android:id="@+id/houserules_recyclerView" android:paddingTop="10dp" android:paddingBottom="10dp" android:clipToPadding="false" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="16dp" android:layout_marginRight="16dp" android:layout_marginStart="16dp" android:layout_marginEnd="16dp"/>
            <TextView android:textSize="16sp" android:textColor="@color/other_room" android:id="@+id/add_house_rule" android:background="@drawable/background_textview" android:padding="10dp" android:layout_width="wrap_content" android:layout_height="40dp" android:layout_marginLeft="16dp" android:layout_marginRight="16dp" android:text="@string/add_your_rule" android:layout_below="@+id/houserules_recyclerView" android:fontFamily="@font/sf_ui_display_regular" android:layout_marginStart="16dp" android:layout_marginEnd="16dp"/>
            <LinearLayout android:orientation="horizontal" android:id="@+id/yourHouseruleLayout" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_below="@+id/houserules_recyclerView">
                <TextView android:textSize="16sp" android:textColor="@color/normal_text_color" android:id="@+id/yourHouserule" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_marginLeft="16dp" android:layout_weight="0.9" android:fontFamily="@font/sf_ui_display_regular" android:layout_marginStart="20dp"/>
                <ImageView android:id="@+id/delete_rule" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_marginTop="10dp" android:layout_marginRight="16dp" android:layout_marginBottom="10dp" android:layout_weight="0.1" android:layout_marginEnd="16dp" app:srcCompat="@drawable/ic_delete_rules"/>
            </LinearLayout>
            <LinearLayout android:orientation="vertical" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="16dp" android:layout_marginRight="16dp" android:layout_below="@+id/houserules_recyclerView">
                <TextView android:textSize="14sp" android:textColor="@color/other_room" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="@string/your_house_rule" android:fontFamily="@font/sf_ui_display_regular"/>
                <EditText android:scrollbarStyle="insideInset" android:textSize="14sp" android:gravity="start" android:id="@+id/AddedRuleEditText" android:background="@drawable/background_textview" android:scrollbars="vertical" android:layout_width="match_parent" android:layout_height="100dp" android:layout_marginTop="10dp" android:maxLines="5" android:lineSpacingExtra="2dp" android:inputType="textMultiLine" android:imeOptions="actionDone" android:overScrollMode="always" android:fontFamily="@font/sf_ui_display_regular"/>
                <LinearLayout android:orientation="horizontal" android:id="@+id/delEditLayout" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content">
                    <android.support.v4.widget.Space android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_weight="2"/>
                    <TextView android:gravity="center" android:id="@+id/deleteCustomRule" android:padding="10dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/house_rule_delete" android:layout_weight="0.5" android:fontFamily="@font/sf_ui_display_regular"/>
                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>
    </android.support.v4.widget.NestedScrollView>
    <LinearLayout android:id="@+id/nextButtonLay" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_alignParentBottom="true">
        <Button android:textSize="22sp" android:textColor="@color/white" android:id="@+id/products_list_next" android:background="@drawable/button_selected_background" android:padding="10dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_margin="16dp" android:text="@string/house_rule_next" android:fontFamily="@font/sf_ui_display_bold" style="?android:attr/borderlessButtonStyle"/>
    </LinearLayout>
</RelativeLayout>
